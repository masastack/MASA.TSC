@inherits TscComponentBase

@if (IsLoading)
{
    <LoadingData />
}
@if (Value.ChartType is ChartTypes.Table)
{
    <ListPanel Value="Value" IsChartDataReady=!IsLoading Class="@($"{Class} {(IsLoading?"hide":"")}")" />
}
else
{
    <EChart Value="Value" Class="@($"{Class} {(IsLoading?"hide":"")}")" />
}
