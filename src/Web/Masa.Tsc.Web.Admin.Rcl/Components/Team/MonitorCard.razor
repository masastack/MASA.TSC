@namespace Masa.Tsc.Web.Admin.Rcl.Components
@inherits TscComponentBase

<MItemGroup Value="Value">
    <MRow Class="mx-6">
        @foreach (var item in _items)
        {
            <MCol Class="ma-0 pa-0 mt-4" Cols="12" >
                <MItem Value="@item.Value.ToString()">
                    <MonitorItemCard Value=@item OnClick="ValueChangedAsync" Style="@ItemStyle(item)" />
                </MItem>
            </MCol>
        }
    </MRow>
</MItemGroup>