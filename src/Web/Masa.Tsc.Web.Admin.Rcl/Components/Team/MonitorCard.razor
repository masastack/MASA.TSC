@namespace Masa.Tsc.Web.Admin.Rcl.Components
@inherits TscComponentBase

<MItemGroup Value="Value" ValueChanged="ValueChanged">
    <MRow Class="mx-6">
        @foreach (var item in _items)
        {
            <MItem Value="@item.Value.ToString()">
                <MCol Class="ma-0 pa-0 mt-4" Cols="12" Style="@ItemStyle(item)">
                    <MonitorItemCard Value=@item OnClick="@(item=>Value=item.Value.ToString())" />
                </MCol>
            </MItem>
        }
    </MRow>
</MItemGroup>