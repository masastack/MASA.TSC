@namespace Masa.Tsc.Web.Admin.Rcl.Components
@inherits TscComponentBase

@if (_isLoading)
{
    @("Loading ...")
}
else
{
    <MContainer>
        <MRow>
            <MCol Cols="2" Class="font-weight-bold">
                <TeamDetail Value=@_team></TeamDetail>
                <ProjectDetail Value=@_project></ProjectDetail>
            </MCol>
            <MCol Cols="10">
                <SearchBar AppId=@_appId Apps=@_project.Apps OnSearch="async (data)=>{ if(_projectCharts!=null) await  _projectCharts.OnLoadDataAsyc(data);}"></SearchBar>
                <ProjectCharts @ref="_projectCharts"></ProjectCharts>
            </MCol>
        </MRow>
    </MContainer>
}