@namespace Masa.Tsc.Web.Admin.Rcl.Components
@inherits TscComponentBase
<MCard>
    <MCardText Class="d-flex pa-0" Style="@($"background-color:{_bgColor}")">
        <MTabs SliderColor="white" BackgroundColor="@_bgColor" Class="col-3 ma-0 text-h4" SliderSize="4"
             ActiveClass="white--text" >
            <MTab IsActive>All</MTab>
            <MTab>Operator</MTab>
            <MTab>Basic Ability</MTab>
            <MTab>Data Factory</MTab>
            <MTab>Data Factory2</MTab>
        </MTabs>
        <MAutocomplete Class="flex-row col-1 pa-0 my-0 mt-2 rounded-0" BackgroundColor="white" Items="Projects"
                       TItem="ProjectDto" TValue="string" TItemValue="string" ItemValue="r=>r.Name"
                       ItemText="r=>r.Identity">
        </MAutocomplete>
        <SearchTextField Class="flex-row col-5 py-0 my-0 mt-2" BackgroundColor="white"></SearchTextField>
        <SDateTimeRangePicker @bind-StartTime="Start" @bind-EndTime="End" Class="ml-0 my-0 pl-0 py-0" />
    </MCardText>
</MCard>