@if(IsEdit)
{
    <MEditor @ref="_editor" @bind-Value="Content" Placeholder="请输入内容" ContentStyle="height:100%" />
}
else
{
    @(new MarkupString(Content))
}

@code {
    private MEditor _editor;

    [Parameter]
    public bool IsEdit { get; set; }

    [Parameter]
    public string Content { get; set; }
}
