@using Masa.Tsc.Web.Admin.Rcl.Components.Panel.Chart.Modules.Echart
@inherits TscComponentBase

@if (IsLoading)
{
    <div class="d-flex full-height full-width white @(Class)" style="border-radius: 8px;">
        <div class="ma-auto">@T("Loading data")</div>
    </div>
}
@if (Value.ChartType == "table")
{
    <ListPanel DataIsReady=!IsLoading Value="Value" IsEdit=ConfigurationRecord.IsEdit ServiceName="@ConfigurationRecord.AppName" Class="@Class" />
}
else
{
    <EChart Value="Value" />
}
