@namespace Masa.Tsc.Web.Admin.Rcl.Components
@inherits TscComponentBase

<div class="d-flex mb-6">
    <SAutoComplete Placeholder="Service"
                   Items="_services"
                   @bind-Value="_service"
                   ItemText="item => item"
                   ItemValue="item => item"
                   TItem=string
                   TValue=string
                   TItemValue=string
                   Small
                   BackgroundColor="white"
                   Clearable
                   Flat
                   Solo
                   Outlined="false"
                   Loading="_serviceSearching"
                   Class="mr-6 rounded-2 m-input--h-40"
                   Style="max-width: 160px"
                   OnSearchInputUpdate="@SearchServices"
                   OnSelectedItemUpdate="Query"
                   OnClearClick="Query">
    </SAutoComplete>

    <SAutoComplete Placeholder="Instance"
                   Items="_instances"
                   @bind-Value="_instance"
                   TItem=string
                   TValue=string
                   ItemText="item => item"
                   ItemValue="item => item"
                   TItemValue=string
                   Small
                   BackgroundColor="white"
                   Clearable
                   Flat
                   Solo
                   Outlined="false"
                   Loading="_instanceSearching"
                   Class="mr-6 rounded-2 m-input--h-40"
                   Style="max-width: 160px"
                   Disabled="@(string.IsNullOrWhiteSpace(_service))"
                   OnSearchInputUpdate="@SearchInstances"
                   OnSelectedItemUpdate="Query"
                   OnClearClick="Query">
    </SAutoComplete>

    <SAutoComplete Placeholder="Endpoint"
                   Items="_endpoints"
                   @bind-Value="_endpoint"
                   TItem=string
                   TValue=string
                   ItemText="item => item"
                   ItemValue="item => item"
                   TItemValue=string
                   OnSearchInputUpdate="@SearchEndpoints"
                   Small
                   BackgroundColor="white"
                   Clearable
                   Flat
                   Solo
                   Outlined="false"
                   Loading="_endpointSearching"
                   Disabled="@(string.IsNullOrWhiteSpace(_service))"
                   Class="rounded-2 m-input--h-40"
                   Style="max-width: 160px;"
                   OnSelectedItemUpdate="Query"
                   OnClearClick="Query">
    </SAutoComplete>

    <MSpacer></MSpacer>

    <SSearch Value="@_keyword"
                ValueChanged="KeywordChanged"
                BackgroundColor="white"
                Class="m-input--h-40" />
</div>
