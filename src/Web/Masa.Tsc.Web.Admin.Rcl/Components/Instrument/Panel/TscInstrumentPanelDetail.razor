@namespace Masa.Tsc.Web.Admin.Rcl.Components
@inherits TscComponentBase

@switch (Type)
{
    case InstrumentTypes.Text:
        {
            <TscWidgetText Item="_panel" @ref="_widget" />
        }
        break;
    case InstrumentTypes.Card:
        {
            <TscWidgetCard Item="_panel" @ref="_widget" />
        }
        break;
    case InstrumentTypes.Chart:
        {
            <TscWidgetChart Item="_panel" @ref="_widget" />
        }
        break;
    case InstrumentTypes.Log:
        {
            <TscWidgetLog Item="_panel" @ref="_widget" />
        }
        break;
    case InstrumentTypes.Trace:
        {
            <TscWidgetTrace Item="_panel" @ref="_widget" />
        }
        break;
    case InstrumentTypes.Tabs:
        {
            <TscWidgetTabs Item="_panel" @ref="_widget" />
        }
        break;
    case InstrumentTypes.Table:
        {
            <TscWidgetTable Item="_panel" @ref="_widget" />
        }
        break;
    default:
        {
            <TscWidgetDefault Item="_panel" @ref="_widget" />
        }
        break;
}

<MButton OnClick="OnSubmitAsync">确认</MButton>
<MButton OnClick="@(async ()=>await CallParent(OperateCommand.Back))">返回</MButton>