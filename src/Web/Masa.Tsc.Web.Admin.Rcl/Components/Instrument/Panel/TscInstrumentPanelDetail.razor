@namespace Masa.Tsc.Web.Admin.Rcl.Components
@inherits TscComponentBase

@switch (Type)
{
    case PanelTypes.Text:
        {
            <TscWidgetText @bind-Value="_panel" @ref="_widget" />
        }
        break;
    case PanelTypes.Card:
        {
            <TscWidgetCard @bind-Value="_panel" @ref="_widget" />
        }
        break;
    case PanelTypes.Chart:
        {
            <TscWidgetChart @bind-Value="_panel" @ref="_widget" />
        }
        break;
    case PanelTypes.Log:
        {
            <TscWidgetLog @bind-Value="_panel" @ref="_widget" />
        }
        break;
    case PanelTypes.Trace:
        {
            <TscWidgetTrace @bind-Value="_panel" @ref="_widget" />
        }
        break;
    case PanelTypes.Tabs:
        {
            <TscWidgetTabs @bind-Value="_panel" @ref="_widget" />
        }
        break;
    case PanelTypes.Table:
        {
            <TscWidgetTable @bind-Value="_panel" @ref="_widget" />
        }
        break;
    default:
        {
            <TscWidgetDefault @bind-Value="_panel" @ref="_widget" />
        }
        break;
}

<MButton OnClick="OnSubmitAsync">确认</MButton>
<MButton OnClick="@(async ()=>await CallParent(OperateCommand.Back))">返回</MButton>