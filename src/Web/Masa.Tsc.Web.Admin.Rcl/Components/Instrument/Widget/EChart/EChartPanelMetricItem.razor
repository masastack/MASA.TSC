@namespace Masa.Tsc.Web.Admin.Rcl.Components
@inherits TscComponentBase

<MCard Width="240">
    <MContainer>
        <MRow>
            <MTextField Value="Value.Name" OnChange=@(async (string value)=>{Value.Name=value;await OnValueChanged();}) Placeholder="指标名称" />
        </MRow>
        <MRow>
            <MTextField TValue="string" Placeholder="取值范围" />
        </MRow>
        <MRow>
            <MTextField Value="Value.Caculate" OnChange=@(async (string value)=>{Value.Caculate=value;await OnValueChanged();}) Placeholder="计算规则" />
        </MRow>
        <MRow>
            <MTextField Value="Value.Unit" Placeholder="单位" OnChange=@(async (string value)=>{Value.Unit=value;await OnValueChanged();}) />
        </MRow>
    </MContainer>
    <MCardActions>
        <MButton OnClick="@(()=>{})"><MIcon Color="@Value.Color">mdi-circle</MIcon></MButton>
        <MButton OnClick="OnDeleteAsync"><MIcon>mdi-delete</MIcon></MButton>
    </MCardActions>
</MCard>