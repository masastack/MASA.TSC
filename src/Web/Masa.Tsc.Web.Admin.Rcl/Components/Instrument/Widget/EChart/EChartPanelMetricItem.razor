@namespace Masa.Tsc.Web.Admin.Rcl.Components
@inherits TscComponentBase

<MCard Class="pa-2">
    <MCardText>
        <MRow>
            <MCol Md="12">
                <STextField @bind-Value="Value.Name" Placeholder="指标名称" />
            </MCol>
            <MCol Md="12">
                <STextField TValue="string" Placeholder="取值范围" />
            </MCol>
            <MCol Md="12">
                <STextField @bind-Value="Value.Caculate" Placeholder="计算规则" />
            </MCol>
            <MCol Md="12">
                <STextField @bind-Value="Value.Unit" Placeholder="单位" />
            </MCol>
        </MRow>
    </MCardText>
    <MCardActions Class="d-flex justify-space-between">
        <SColorGroup @bind-Value="Value.Color" Colors='new List<string>{"#4318FF","#05CD99","#FFB547","#37A7FF","#FF5252"}' />
        <MIcon OnClick="OnDeleteAsync" Color="red">mdi-delete</MIcon>
    </MCardActions>
</MCard>