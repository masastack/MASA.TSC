@namespace Masa.Tsc.Web.Admin.Rcl.Components
@inherits TscComponentBase

@switch (Type)
{
    case InstrumentTypes.Text:
        {
            <TscWidgetText @ref="_widget" />
        }
        break;
    case InstrumentTypes.Card:
        {
            <TscWidgetCard @ref="_widget" />
        }
        break;
    case InstrumentTypes.Widget:
        {
            <TscWidgetChart @ref="_widget" />
        }
        break;
    case InstrumentTypes.Log:
        {
            <TscWidgetLog @ref="_widget" />
        }
        break;
    case InstrumentTypes.Trace:
        {
            <TscWidgetTrace @ref="_widget" />
        }
        break;
    case InstrumentTypes.Tabs:
        {
            <TscWidgetTabs @ref="_widget" />
        }
        break;
    case InstrumentTypes.Table:
        {
            <TscWidgetTable @ref="_widget" />
        }
        break;
    default:
        {
            <TscWidgetDefault @ref="_widget" Type="Type" />
        }
        break;
}

<MButton OnClick="OnSubmitAsync">确认</MButton>
<MButton OnClick="@(async ()=>await CallParent("back"))">返回</MButton>