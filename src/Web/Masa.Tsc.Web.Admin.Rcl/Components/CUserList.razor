@namespace Masa.Tsc.Web.Admin.Rcl.Components

@if (Users != null && Users.Any())
{
    foreach (var user in Users)
    {
        <MCard Class="pa-0 ma-0">
            <MCardText Class="d-flex align-center pa-0 ma-0">
                <MAvatar MinHeight="24" Height="24">
                    <MImage Src="@user.ImgUrl" MaxHeight=MaxHeight MaxWidth=MaxWidth></MImage>
                </MAvatar>
                @user.Name
            </MCardText>
        </MCard>
    }
}

@code {

    [Parameter]
    public IEnumerable<UserListDto> Users { get; set; }

    [Parameter]
    public StringNumber MaxHeight { get; set; }

    [Parameter]
    public StringNumber MaxWidth { get; set; }


    public class UserListDto
    {
        public string Name { get; set; }

        public string ImgUrl { get; set; }
    }
}