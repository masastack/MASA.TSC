<MMenu OpenOnHover
       CloseOnContentClick="false"
       AllowOverflow
       ContentClass="m-ellipsis-text__tooltip"
       OffsetY>
    <ActivatorContent>
        <span @attributes="@context.Attrs">
            @ChildContent
        </span>
    </ActivatorContent>
    <ChildContent>
        @((MarkupString)Tooltip)
    </ChildContent>
</MMenu>

@code {
    [Parameter]
    public string Tooltip { get; set; }

    [Parameter]
    public string Class { get; set; }

    [Parameter]
    public RenderFragment? ChildContent { get; set; }
}
