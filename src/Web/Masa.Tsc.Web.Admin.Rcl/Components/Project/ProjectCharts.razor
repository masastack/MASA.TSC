        <ErrorWarnChart Title="ERRORS" SubText="errors" Error @ref="_errorWarnChart" />
        <ErrorWarnChart Title="WARNS" SubText="warns" Warn @ref="_warnErrorChart"/>
        <LogTraceChart Trace Height="150" Title="@("Trace")" @ref="_traceLogChart"/>
    </MCol>
</MRow>
<MRow>
    <MCol Class="d-flex justify-space-between">
        <ObserveChart Title="OBSTACLES" Height="180" @ref="_observeChart"/>
