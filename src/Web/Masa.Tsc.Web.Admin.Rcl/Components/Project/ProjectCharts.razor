@namespace Masa.Tsc.Web.Admin.Rcl.Components
@inherits TscComponentBase

<div class="h-269" style="overflow-y: auto;overflow-x:hidden;">
    <MRow Style="background-color:#F0F3FA;" Class="@Class">
        <MCol Cols="3">
            <ErrorWarnChart Title=@("Service Success Rate") @ref="_errorWarnChart" />
        </MCol>
        <MCol Cols="9">
            <ServiceCallChart Title="@("Service Load(调用次数/每分钟)")" @ref="_traceLogChart" />
        </MCol>
        <MCol Cols="3">
            <AvgResponseChart @ref="_avgResponseChart" />
        </MCol>
        <MCol Cols="3">
            <ApdexChart Title="Apdex" @ref="_apdexChart" />
        </MCol>
        <MCol Cols="6">
            <LogTraceChart Title="@("Service Response Time Percentile (ms)")" @ref="_traceLogChart1" />
        </MCol>
        <CascadingValue Value="ConfigurationRecord">           
            <MCol Cols="6">
                <ChartPanel Value="_endpoint" />
            </MCol>
            <MCol Cols="6">
                <ChartPanel Value="_slowEndpoint" />
            </MCol>
        </CascadingValue>
    </MRow>
</div>