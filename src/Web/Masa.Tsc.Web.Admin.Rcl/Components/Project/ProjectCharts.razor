@namespace Masa.Tsc.Web.Admin.Rcl.Components
@inherits TscComponentBase

<div class="h-269" style="overflow-y: auto;overflow-x:hidden;">
    <MRow Style="background-color:#F0F3FA;" Class="@Class">
        <MCol Cols="3">
            <ErrorWarnChart Title=@T("Service Success Rate") @ref="_errorWarnChart" />
        </MCol>
        <MCol Cols="9">
            <ServiceCallChart Title="@(T("Service Load")+"("+T("call/min")+")")" @ref="_traceLogChart" />
        </MCol>
        <MCol Cols="3">
            <AvgResponseChart @ref="_avgResponseChart" Title="@T("Service Avg Response Time")" />
        </MCol>
        <MCol Cols="3">
            <ApdexChart Title="@(T("Service Apdex"))" @ref="_apdexChart" />
        </MCol>
        <MCol Cols="6">
            <LogTraceChart Title="@(T("Service Response Time Percentile")+"("+T("ms")+")")" @ref="_traceLogChart1" />
        </MCol>
        <CascadingValue Value="ConfigurationRecord">
            <MCol Cols="6">
                <ChartPanel Value="_endpoint" />
            </MCol>
            <MCol Cols="6">
                <ChartPanel Value="_slowEndpoint" />
            </MCol>
        </CascadingValue>
    </MRow>
</div>