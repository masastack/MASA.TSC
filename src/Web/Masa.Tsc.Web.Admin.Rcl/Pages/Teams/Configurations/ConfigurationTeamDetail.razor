@page "/teamDetail/configuration/{projectId}/{teamId}/{serviceName}"
@page "/teamDetail/configuration/record/{projectId}/{teamId}/{serviceName}"
@inherits TscComponentBase

<PageTitle>@I18n.TeamDashboard("Configure Team Detail")</PageTitle>

<DashboardConfiguration ConfigurationRecord="ConfigurationRecord"
                        SavePanelsAction="SavePanelsAsync"
                        GetPanelsAction="GetPanelsAsync"
                        Style="max-height: calc(100vh - 205px);"
                        HeaderStyle="height: 72px;background: #FFFFFF;border-radius: 16px;"
                        HeaderClass="px-4"  View>
    <HeaderContent>
        <div class="d-flex my-auto" style="width: 40px;height: 40px;border: 1px solid #E4E8F3;border-radius: 40px;">
            <div class="ma-auto">
                <SIcon OnClick=NavigateToTeamProjectDialog Color="emphasis2" Size=24 Tooltip="@I18n.TeamDashboard("Return to team details page")">
                    mdi-arrow-left
                </SIcon>       
            </div>
        </div>
        <div class="ml-4 h6 emphasis2--text my-auto">
            @(_serviceName)
        </div>
        <ServiceAutoComplete @ref=_serviceAutoComplete Value="@ConfigurationRecord.Service" DataReady="ServicesDataReady" Style="visibility:hidden;" />
    </HeaderContent>
</DashboardConfiguration>