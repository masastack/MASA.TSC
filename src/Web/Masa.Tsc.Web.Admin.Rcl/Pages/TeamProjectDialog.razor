@inherits TscComponentBase

<SSheetDialog @bind-Value=Visible Title="111111">
    <MCard Style="background-color:#F0F3FA;border-top-left-radius: 20px;border-top-right-radius: 20px;" Class="full-height">
        <MRow NoGutters Class="full-height">
            <MCol Style="background-color:white;border-top-left-radius: 20px;" Cols="2" Class="d-flex flex-column justify-space-between pa-6">
                <ProjectDetail Value=@_project></ProjectDetail>
                <TeamDetail Value=@_team></TeamDetail>
            </MCol>
            <MCol Cols="10" Class="pa-8">
                <SearchBar AppId=@_appId Apps=@_project.Apps OnSearch="async (data)=>{ if(_projectCharts!=null) await  _projectCharts.OnLoadDataAsyc(data);}"></SearchBar>
                <ProjectCharts Class="mt-2" @ref="_projectCharts"></ProjectCharts>
            </MCol>
        </MRow>
    </MCard>
</SSheetDialog>

