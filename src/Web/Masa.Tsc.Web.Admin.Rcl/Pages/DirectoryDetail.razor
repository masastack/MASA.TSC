@namespace Masa.Tsc.Web.Admin.Rcl.Pages
@inherits TscComponentBase

<MForm Model="_model" EnableValidation EnableI18n>
    <MContainer>
        <MRow>
            <MCol>
                <MLabel>Parent Name:</MLabel> @ParentName
            </MCol>
        </MRow>
        <MRow>
            <MCol>
                <MTextField TValue=string Label="name" Placeholder="intput name" @bind-Value="_model.Name"></MTextField>
            </MCol>
        </MRow>
        <MRow>
            <MCol>
                <MTextField TValue="int" @bind-Value="_model.Sort"></MTextField>
            </MCol>
        </MRow>
        <MRow>
            <MCol>
                <MButton OnClick=SaveAsync>Save</MButton>
            </MCol>
        </MRow>
    </MContainer>
</MForm>
